{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@composables/*": ["./src/composables/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@data/*": ["./src/data/*"],
      "@interface/*": ["./src/interface/*"],
      "@layout/*": ["./src/layout/*"],
      "@router/*": ["./src/router/*"],
      "@services/*": ["./src/services/*"],
      "@types/*": ["./src/types/*"],
      "@views/*": ["./src/views/*"],
      "@store/*": ["./src/store/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/store/core.pinia.ts", "src/utils/generateCode.ts"]
}
